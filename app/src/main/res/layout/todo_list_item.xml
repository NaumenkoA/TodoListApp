<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="#D9DDDD">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:weightSum="100"
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/toDoLayout">

    <CheckBox
        tools:text="Morning jogging"
        android:layout_width="0dp"
        android:layout_weight="70"
        android:layout_height="wrap_content"
        android:id="@+id/todoItemCheckBox"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="#333838"
        android:textColor="#333838"
        android:clickable="false"
        android:focusable="false"
        android:checked="false"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:srcCompat="@android:drawable/star_big_on"
            android:id="@+id/priorityImageView"/>


        <TextView
            tools:text="till 07/17"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:textColor="#333838"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/dueDateTextView"/>

    </LinearLayout>

    <TextView
        tools:text="Category: Family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:layout_below="@+id/toDoLayout"
        android:textColor="#333838"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        android:id="@+id/categoryTextView"/>

</RelativeLayout>